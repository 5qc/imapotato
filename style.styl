// Import
@import url("https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap")

// Mixins
centered()
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%)
unsel()
    user-select none
    -ms-user-select none
    -moz-user-select none
    -webkit-user-select none
    -webkit-user-drag none

// Styling
body
    font-family "Roboto Mono", monospace
a
    &:hover
        text-decoration none

.potato-container
    centered()
    text-align center

.spin
    position fixed
    top 10px
    left 50%
    transform translate(-50%, 0)
    text-align center
    margin 10px
    padding 5px
    background darken(#fff, 10%)
    border-radius 10px

    .record
        font-size 80%
        font-style italic
        padding 5px 0px 0px 0px
        #spin-record
            display inline

.unsel
    unsel()

.socials-container
    font-size 100%
    position fixed
    bottom 15px
    left 15px
    background darken(#fff, 10%)
    border-radius 10px
    padding 10px

    .github-link
        color black
    .youtube-link
        color red
    .twitter-link
        color #1DA1F2
    .instagram-link
        color #833AB4

// Animations
.rotate
    animation rotation 2s infinite linear
@keyframes rotation
    from
        transform rotate(0deg)
    to
        transform rotate(359deg)
